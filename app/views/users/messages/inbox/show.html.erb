<% content_for(:title, "Received Messages | GoodGames") %>

<div class="text--default-size container">
  <h2>
    <%= link_to(
      "Messages",
      user_inbox_index_path(current_user),
      class: "link--teal",
    ) %>
    <span>> Received Messages</span>
  </h2>

  <div class="mt-5">
    <div class="d-flex">
      <span class="mr-4">from:</span>
      <%= link_to(
        @message.sender.name,
        user_library_path(@message.sender),
        class: "link--teal",
      ) %>
    </div>

    <div class="mt-5">
      <span>subject:</span>
      <span><%= @message.subject %></span>
    </div>

    <div class="mt-5">
      <p>message</p>
      <span><%= @message.body %></span>
    </div>
  </div>

  <div class="d-flex mt-5">
    <%= link_to(
      "Reply",
      new_user_message_path(@message.sender),
      class: "button button--blue mr-4",
    ) %>

    <%= button_to(
      "Delete message",
      user_message_path(@message),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this message?" },
      class: "button button--red",
    ) %>
  </div>
</div>
