<% content_for(:title, "Recover password") %>

<div class="container">
  <div class="form__box form--centered p-5 text-center mt-10 mb-5">
    <h2 class="heading heading--large text--red mb-3">
      <u>Forgot your password?</u>
    </h2>

    <%= form_for(
      resource,
      as: resource_name,
      url: password_path(resource_name),
      html: { method: :post },
    ) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email, class: "form__label" %><br />
        <%= f.email_field(
          :email,
          autofocus: true,
          autocomplete: "email",
          class: "form-control form__field",
        ) %>
      </div>

      <div class="actions">
        <%= f.submit(
          "Send me reset password instructions",
          class: "button button--blue button--block my-5",
        ) %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
