<div class="container p-0 mt-5">
  <h1 class="text-center heading heading--large">
    <u><span class="text--red">G</span>ather your <span class="text--blue">G</span>aming platforms!</u>
  </h1>
  <div class="row justify-content-center">
    <% @platforms.each do |platform| %>
      <div class="card mx-4 my-5 p-0 col-lg-3 col-md-5 col-sm-12" id="<%= platform.slug %>">
        <%= image_tag platform.image_background, class: "w-100"%>
        <div class="card-body d-flex flex-column justify-content-between p-0">
          <h2 class="text-center heading heading--normal p-2">
            <%= link_to platform.name, platform_path(platform.slug), class: "link--teal" %>
          </h2>
          <%= link_to "Show more", platform_path(platform.slug), class: "btn btn--red" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
