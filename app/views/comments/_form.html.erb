<% form_url = comment.persisted? ? game_comment_path : game_comments_path %>
<% form_method = comment.persisted? ? "patch" : "post" %>

<%= form_with(
    model: [commentable, comment],
    local: true,
    method: form_method,
    url: form_url,
  ) do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "form__label" %>
    <%= f.text_field(
      :title,
      placeholder: "Exceptional!",
      autofocus: true,
      class: "form-control form__field",
    ) %>
  </div>

  <div class="form-group">
    <%= f.label :body, "Comment", class: "form__label" %>
    <%= f.text_area(
      :body,
      placeholder: "Enter your amazing comment!!",
      size: "50x8",
      class: "form-control form__field",
    ) %>
  </div>

  <%= f.submit class: "btn btn-block btn--teal mt-5" %>
<% end %>
