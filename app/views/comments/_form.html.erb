<%= form_with model: [commentable, Comment.new], local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "form__label" %>
    <%= f.text_field(
      :title,
      placeholder: "Exceptional!",
      autofocus: true,
      class: "form-control form__field",
    ) %>
  </div>

  <div class="form-group">
    <%= f.label :body, "Comment", class: "form__label" %>
    <%= f.text_area(
      :body,
      placeholder: "Enter your amazing comment!!",
      size: "50x8",
      class: "form-control form__field",
    ) %>
  </div>

  <%= f.submit "Add comment", class: "btn btn-block btn--green mt-5" %>
<% end %>
