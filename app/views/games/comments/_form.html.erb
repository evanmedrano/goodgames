<% content_for(
  :title,
  game_comment_title(game: commentable, comment: comment),
) %>

<body style="background: url(<%= commentable.background_image %>) no-repeat;">
  <div class="container">
    <div class="form__box my-5 pt-3 pb-5 px-5">
      <div class="text-center">
        <%= link_to(
          "Back to #{commentable.name}",
          game_path(commentable),
          class: "link--red heading heading--normal",
        ) %>
      </div>

      <%= form_with model: [commentable, comment], local: true do |f| %>
        <div class="form-group">
          <%= f.label :title, class: "form__label" %>
          <%= f.text_field(
            :title,
            placeholder: "Exceptional!",
            autofocus: true,
            class: "form-control form__field",
          ) %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Comment", class: "form__label" %>
          <%= f.text_area(
            :body,
            placeholder: "Enter your amazing comment!!",
            size: "50x8",
            class: "form-control form__field",
          ) %>
        </div>

        <%= f.submit class: "button button--block button--teal mt-5" %>
      <% end %>
    </div>
  </div>
</body>
