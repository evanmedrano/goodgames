<div class="card" data-id="<%= @game["id"] %>">
    <h1><%= @game["name"] %></h1> 
    <%= image_tag "#{@game["background_image"]}", class: "card__image" %>

    <% if @game["platforms"].present? %>
        <% @game["platforms"].each do |platform| %>
            <span><%= platform["platform"]["name"] %></span>
        <% end %>
    <% end %>

    <p><%= @game["released"] %></p>
</div>